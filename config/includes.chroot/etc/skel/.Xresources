! font
URxvt.font:           xft:Hack:pixelsize=15:antialias=true
URxvt.boldFont:       xft:Hack:pixelsize=15:bold:antialias=true
URxvt.italicFont:     xft:Hack:pixelsize=15:italic:antialias=true
URxvt.boldItalicFont: xft:Hack:pixelsize=15:bold:italic:antialias=true
URxvt.letterSpace: -2

! border
URxvt.internalBorder: 0
URxvt.externalBorder: 0
URxvt.scrollBar: 0

! cursor
URxvt.cursorBlink: 0
Xcursor.theme: DMZ-White

! transparency
URxvt.transparent: false
URxvt.shading: 40
URxvt.fading: 30

! color
URxvt.cursorColor:  #cc0000
URxvt.cursorColor2: #ffffff
*background: #000000
*foreground: #ebdbb2
*color0:  #282828
*color8:  #928374
