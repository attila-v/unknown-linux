" airline
let g:airline_powerline_fonts=1
let g:airline_theme='gruvbox'
set laststatus=2
set noshowmode

" general
set encoding=utf-8
set undolevels=1000

" key
set backspace=indent,eol,start

" format
set mouse=a
set cpoptions+=$
set formatoptions+=o

" visual
syntax enable
set background=dark
colorscheme gruvbox
set cursorline
set number
set hlsearch
set ruler
set colorcolumn=80
set listchars=eol:¬,tab:>·,trail:~,extends:>,precedes:<,space:␣
set list

" tab
set expandtab
set autoindent
set smarttab
set smartindent
set shiftwidth=4
set softtabstop=4

" search
set smartcase
set ignorecase
set incsearch

" paste
set pastetoggle=<F2>

" swap
set nobackup
set nowritebackup
set nowb
set noswapfile
